extends layout

block content
  h1= title
  p Welcome to #{title}
  
  nav
    if user
      a(href="/create-post") Create Post
      a(href="/become-member") Become Member

      // When this is clicked, I want to make website to send a POST request.
      a(href="/logout") Log Out
    else
      a(href="login") Log in
      a(href="signup") Sign up

  if posts
    form
      ul
        each post in posts
          li
            div #{post.title}
            div #{post.message}
            div #{post.user}
            div #{post.timestamp}
            if user && user.admin 
              button(type='submit' formaction=`/post/${post.id}/delete` formmethod="post") delete post

  
